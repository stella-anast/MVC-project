@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema Ticket Buying App</title>

    <!-- External Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaApp.styles.css" asp-append-version="true" />

    <!-- Internal Styles -->
    <style>
        body {
            background-image: url('~/images/img.png');
            background-size: cover;
            background-position: center;
            color: white;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden;
            font-family: 'Arial', sans-serif; /* Set a suitable font family */
        }

        .welcome-container {
            text-align: center;
            margin-top: 150px;
            position: absolute;
            width: 100%;
            padding: 0 20px;
            box-sizing: border-box;
        }

        .welcome-text {
            font-size: 2.5em;
            font-weight: bold;
            margin-bottom: 30px; /* Slightly reduced margin for better spacing */
        }

        .learn-link {
            color: white;
            text-decoration: none;
            border-bottom: 1px solid white;
            padding-bottom: 2px;
            transition: border-bottom 0.3s ease-in-out;
        }

            .learn-link:hover {
                border-bottom: 1px solid transparent;
            }

        footer {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            color: #ccc; 
            font-size: 14px; 
            padding: 10px; 
            background-color: rgba(0, 0, 0, 0.5); 
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5); 
        }
    </style>
</head>
<body>
    <div class="container welcome-container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="welcome-text">Welcome to Cinema Ticket Buying App</h1>
                <p>Explore and enjoy the latest movies in our theaters. Buy your tickets online for a seamless experience.</p>
                <p>Learn more about our <a class="learn-link" href="https://learn.microsoft.com/aspnet/core">ASP.NET Core</a> web app.</p>
            </div>
        </div>
    </div>

    <footer>
        <!-- Footer content goes here -->
    </footer>
</body>
</html>
