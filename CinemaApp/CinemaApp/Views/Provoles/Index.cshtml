@model IEnumerable<CinemaApp.Models.Provole>

@{
    ViewData["Title"] = "Index";
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-family: Arial, sans-serif;
    }

    th, td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: center;
        font-size:20px;
    }

    th {
        background-color: black;
        color: black;
        font-size: 25px;
    }

    tr {
        background-color: #f9f9f9;
    }

    .no-data {
        text-align: center;
        font-style: italic;
        color: #666;
    }
</style>

<h1 style="color:white">Screenings</h1>

<table class="table">
    <thead>
        <tr>
            <th>Movie Time</th>
            <th>Movie Name</th>
            <th>Cinema</th>
            <th>Screening Room</th>
            <th>Number of seats</th>
            <th>Edit Screening</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MoviesTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Movies.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cinemas.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cinemas._3d)</td>
                    <td>@Html.DisplayFor(modelItem => item.Seats)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>                      
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="no-data">No data available</td>
            </tr>
        }
    </tbody>
</table>
